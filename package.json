{
  "name": "react-hover-video-player",
  "version": "10.0.1",
  "description": "React component which manages playing a video when the user hovers over it and pausing when they stop.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.mjs",
    "build:prod": "node build.mjs --clean --builds=all && npx tsc",
    "dev": "node dev.mjs",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "validate-docs": "npx ts-node scripts/validateReadme.ts",
    "commit": "git-cz",
    "prepare": "husky install",
    "prepack": "npx ts-node scripts/copyDocsReadmeToRoot.ts",
    "test": "playwright test -c tests/playwright.config.ts"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.31.0",
    "@types/node": "^20.2.5",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vuepress/plugin-search": "^2.0.0-beta.61",
    "emotion": "^10.0.27",
    "esbuild": "^0.17.10",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^3.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^5.1.3",
    "lint-staged": "^10.2.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.8.1",
    "ts-node": "^10.2.1",
    "typescript": "^5.1.3",
    "vuepress": "^2.0.0-beta.61"
  },
  "author": "Ryan Geyer",
  "homepage": "https://react-hover-video-player.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gyanreyer/react-hover-video-player.git"
  },
  "keywords": [
    "react",
    "component",
    "image",
    "thumbnail",
    "hover",
    "play",
    "mouse",
    "touch",
    "loading",
    "video",
    "player"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "readme",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "minor"
            },
            {
              "type": "perf",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}