{
  "name": "react-hover-video-player",
  "version": "0.0.0-development",
  "description": "React component which manages playing a video when the user hovers over it and pausing when they stop.",
  "main": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo --webpack.html.template=demo/src/templates/dev-playground.html",
    "start:demo": "nwb serve-react-demo",
    "test": "jest --config=tests/jest.dev.config.js",
    "test:release": "npm run build -- --no-demo && jest --config=tests/jest.prod.config.js",
    "test:watch": "npm run test -- --watch --no-cache",
    "commit": "npx git-cz"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "commitizen": "^4.1.2",
    "core-js": "^3.6.5",
    "cz-conventional-changelog": "^3.2.0",
    "emotion": "^10.0.27",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-testing-library": "^3.0.2",
    "husky": "^4.2.5",
    "jest": "^25.2.7",
    "lint-staged": "^10.2.6",
    "nwb": "^0.25.2",
    "prettier": "^2.0.2",
    "react": "^16.8.0",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "react-syntax-highlighter": "^12.2.1",
    "regenerator-runtime": "^0.13.5",
    "semantic-release": "^17.0.7",
    "use-http": "^1.0.12"
  },
  "author": "Ryan Geyer",
  "homepage": "https://react-hover-video-player.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gyanreyer/react-hover-video-player.git"
  },
  "keywords": [
    "react",
    "component",
    "image",
    "thumbnail",
    "hover",
    "play",
    "mouse",
    "touch",
    "loading",
    "video",
    "player"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "readme",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
