{
  "name": "react-hover-video-player",
  "version": "0.0.0-development",
  "description": "React component which manages playing a video when the user hovers over it and pausing when they stop.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup/prod.config.ts",
    "dev": "rollup -c rollup/dev.config.ts -w",
    "test": "nyc --check-coverage --reporter=text --reporter=lcov cypress run-ct --config-file=tests/cypress/cypress.json --browser=chrome --headless",
    "test:smoke": "npm run build && BABEL_ENV=production npm test",
    "test-runner": "cypress open-ct --config-file=tests/cypress/cypress.json",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "validate-docs": "npx ts-node scripts/validateReadme.ts",
    "commit": "git-cz",
    "prepare": "husky install",
    "prepack": "npx ts-node scripts/copyDocsReadmeToRoot.ts"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@cypress/code-coverage": "^3.9.11",
    "@cypress/react": "^5.10.0",
    "@cypress/webpack-dev-server": "^1.6.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vuepress/plugin-search": "^2.0.0-beta.16",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "commitizen": "^4.2.4",
    "cypress": "^7.6.0",
    "cypress-real-events": "^1.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "emotion": "^10.0.27",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^3.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^5.1.3",
    "lint-staged": "^10.2.6",
    "nyc": "^15.1.0",
    "prettier": "^2.0.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^2.45.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2",
    "vuepress": "^2.0.0-beta.16",
    "webpack": "^5.55.1",
    "webpack-dev-server": "^4.3.0"
  },
  "author": "Ryan Geyer",
  "homepage": "https://react-hover-video-player.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gyanreyer/react-hover-video-player.git"
  },
  "keywords": [
    "react",
    "component",
    "image",
    "thumbnail",
    "hover",
    "play",
    "mouse",
    "touch",
    "loading",
    "video",
    "player"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "readme",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "minor"
            },
            {
              "type": "perf",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
